<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />
    <style name="GUIButton">
        <item name="android:background">@drawable/menu_button</item>
        <item name="android:textColor">@drawable/textcolor_button</item>
    </style>
    <style name="FBbutton"> <item name="android:background">@drawable/fb_button</item></style>
    <style name="TWbutton"> <item name="android:background">@drawable/twbutton</item></style>
     <style name="Buybutton"> <item name="android:background">@drawable/buy_button</item></style>
    <style name="EarthA"> <item name="android:background">@drawable/signout_button</item></style>
    <style name="EarthB"> <item name="android:background">@drawable/earth_button</item></style>
    <style name="back_button"><item name="android:background">@drawable/backbutton</item></style>
    <style name="forward_button"><item name="android:background">@drawable/forwardbutton</item></style>
    <style name="pause_button"><item name="android:background">@drawable/pause_button</item></style>
    <style name="restart_button"><item name="android:background">@drawable/restart_button</item></style>

    <style name="BH_dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#00FF00</item>
        <item name="android:background">#000000</item>
        <item name="android:textColorPrimary">#00FF00</item>
    </style>
    
</resources>